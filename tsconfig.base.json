        "moduleResolution": "Node",
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "rootDir": "src",
        "types": ["node", "jest"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
